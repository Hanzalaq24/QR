send "pm2 delete qr-frontend || true\r"
expect "#"

send "pm2 start npm --name \"qr-frontend\" -- start -- -p 3002\r"
expect "#"

send "pm2 save\r"
expect "#"

# Check logs
send "sleep 5\r"
expect "#"
send "pm2 logs qr-frontend --lines 20 --nostream\r"
expect "#"

send "exit\r"
expect eof
