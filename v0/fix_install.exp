#!/usr/bin/expect -f

set timeout 600
set host "72.61.229.171"
set user "root"
set password ")vbofQi/lHXSMqF?Nk8E"

spawn ssh -o StrictHostKeyChecking=no $user@$host

expect {
    "password:" {
        send "$password\r"
    }
}
expect "#"

send "cd /var/www/qr.akmal.in\r"
expect "#"

# 1. Install dependencies with legacy-peer-deps
send "echo '--- INSTALLING WITH LEGACY PEER DEPS ---'\r"
send "npm install --omit=dev --legacy-peer-deps\r"
expect "#"

# 2. Build
send "echo '--- BUILDING APP ---'\r"
send "NEXT_PUBLIC_BASE_URL=https://qr.akmal.in npm run build\r"
